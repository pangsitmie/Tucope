<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    app:cardElevation="5dp"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="@color/background_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cryptoColRelLayout">


        <TextView
            android:id="@+id/cryptoSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="3dp"
            android:text="SYMBOL"
            android:textColor="@color/secondary_color"
            android:textSize="22sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/cryptoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cryptoSymbol"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="Name"
            android:textColor="@color/secondary_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cryptoPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/addNewCryptoBtn"
            android:text="$ 0.00"
            android:textColor="@color/secondary_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addNewCryptoBtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_square_button"
            android:backgroundTint="@color/secondary_color"
            android:paddingBottom="3dp"
            android:text="+"
            android:textColor="@color/background_color"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>